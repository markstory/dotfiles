[color]
	branch  = auto
	diff = auto
	status = auto
[alias]
	fix = "!f() { git commit --fixup $1; PREVIOUS=$(git log --pretty=%P -n 1 $1); GIT_SEQUENCE_EDITOR=touch git rebase -i --autosquash $PREVIOUS; }; f"
	br = branch
	merged = branch --merged
	co = checkout
	nb = checkout -b
	ci = commit
	ca = commit --amend
	df = diff
	dc = diff --cached
	cp = cherry-pick
	st = status -sb -uno
	gl = log --pretty=short --decorate=short --graph
[color "status"]
	added = yellow
	changed = green
[color "diff"]
	meta = cyan bold
	frag = magenta bold
	old = red bold
	new = green bold
